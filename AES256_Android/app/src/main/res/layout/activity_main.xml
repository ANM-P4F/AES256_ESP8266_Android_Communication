<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    <EditText
        android:id="@+id/esp8266Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="192.168.1.69"
        android:gravity="left"
        android:hint="ESP8266 Address"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/esp8266Port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6868"
        android:gravity="left"
        android:hint="ESP8266 Port"
        android:inputType="number"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/myPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="my port"
        android:inputType="number"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/passAES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="password"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:text="Sent Message: " />
    <EditText
        android:id="@+id/sentMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="Message to be sent"
        android:paddingLeft="10dp"/>
    <EditText
        android:id="@+id/sentMsgEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="Encrypted message to be sent"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="Received Message: " />
    <EditText
        android:id="@+id/receivedMsgEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:enabled="false" />
    <EditText
        android:id="@+id/receivedMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:enabled="false" />
    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Send"></Button>
</LinearLayout>